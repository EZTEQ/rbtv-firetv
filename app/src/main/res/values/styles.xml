<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:colorBackground">@android:color/black</item>
    </style>
    
    <style name="AppTextTitle">
        <item name="android:fontFamily">@font/arvo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textHighlight</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTextContent">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextContentLight" parent="AppTextContent">
        <item name="android:text">@color/textLight</item>
    </style>

</resources>
